<root>
  <template name="button_checkbox_subchapter">
    <button_checkbox>
			<anchored to="rightanchor" width="20" height="20">
				<top />
				<right anchor="left" relation="relative" offset="0" />
			</anchored>
      <tooltip textres="story_label_subchapter_toggle" />
    </button_checkbox>
  </template>
	<template name="masterindexitem_name">
		<stringfield>
			<anchored position="insidetopleft" offset="30,2" height="20">
				<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
			</anchored>
			<font>reference-r</font>
			<nodrag />
			<static />
			<script file="campaign/scripts/masterindexitem_name_author.lua" />
		</stringfield>
	</template>
  
  <windowclass name="encounter_header" merge="merge">
		<sheetdata>
      <!-- if button_record_locked had a name I could just insert this -->
      <button_checkbox_subchapter name="subchapter" insertbefore="name"/>
      <!-- -->
 		</sheetdata>
  </windowclass>
</root>
