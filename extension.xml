<?xml version="1.0" encoding="iso-8859-1"?>

<root version="3.0" >

	<properties>
		<name>CoreRPG - Author</name>
		<version>1.3</version>
		<loadorder>99</loadorder>
		<description>
			<text>Write story entries and then author them into a Ref-Manual.</text>
			<website></website>
			<author>Celestian</author>
		</description>
	</properties>

	<announcement text="Author - CoreRPG version 1.3.\rby Celestian" font="emotefont"/>

	<base>		
        <!-- Author requirements -->
        <script name="AuthorManagerADND" file="scripts/manager_author_adnd.lua" />
        <includefile source="utility/utility_author.xml" />
        
        <!-- Author strings -->
        <string name="author_window_title">Author Manual</string>
        <string name="author_completed">Authored manual '%s'as file: %s.</string>
        <string name="author_label_directory">Directory</string>
        <string name="author_button">Author</string>
        <string name="author_strip_chapter">Chapter - Clean Ordering</string>
        <string name="author_strip_chapter_tooltip">Removing ordering numbers before the chapter name. i.e. "001 Chapter 1", would end up as "Chapter 1"</string>
        <string name="author_strip_subchapter">Sub-Chapter - Clean Ordering</string>
        <string name="author_strip_subchapter_tooltip">Removing ordering numbers before the sub-chapter name. i.e. "001 Sub-Chapter 1", would end up as "Sub-Chapter 1"</string>
        <string name="author_strip_entry">Entry - Clean Ordering</string>
        <string name="author_strip_entry_tooltip">Removing ordering numbers before a story name. i.e. "001 The room of Death!", would end up as "The room of Death!"</string>
        
    </base>
    
</root>
